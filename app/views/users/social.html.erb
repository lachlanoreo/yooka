<h2 class="absolute-header"><%= current_user.first_name.capitalize %> <%= current_user.last_name.capitalize %>'s Social Dashboard</h2>
<h2>Challenge Leaderboard</h2>
<table style="width: 100%" class="table table-dark">
    <tr>
        <th scope="col"></th><th scope="col">User</th><th scope="col">XP</th>
    </tr>
        <% @leaderboard.each do |user| %>
            <tr>
                <td><%= cl_image_tag user.photo.key, :gravity=>"faces", :crop=>"fill", class: "avatar m-1", alt: "avatar-large" %></td>
                <td><%= user.first_name %></td>
                <td><%= user.xp %></td>
            </tr>
        <% end %>
</table>


<div class="-container">
  <h2>The Feed</h2>
  <% @recent_activity.each do |activity| %>
    <div class="comment-container">
      <% if activity.is_a?(BadgeUser) %>
      <p> <%= cl_image_tag activity.user.photo.key, :gravity=>"faces", :crop=>"fill", class: "avatar m-1", alt: "avatar-large" %> <%=activity.user.first_name%> has earned "<%=activity.badge.name%>" on <%= activity.created_at.strftime("%A %d %B") %> </p>
      <% else %>
      <p> <%= cl_image_tag activity.journey.user.photo.key, :gravity=>"faces", :crop=>"fill", class: "avatar m-1", alt: "avatar-large" %> <%= activity.journey.user.first_name %> logged <%=  activity.habit.name %> on <%= activity.created_at.strftime("%A %d %B") %></p>
      <% end %>
    </div>
  <% end %>
</div>

<%= link_to 'Back', :back %>
