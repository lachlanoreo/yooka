<div class="absolute-header grey">
  <h3>Tools</h3>
  <p>Content for when you need it most</p>
</div>

<div class="cards-tool">
<% @tools.each do |tool| %>
  <div class="card-trip-index mb-2">
                  <%=  image_tag("tools/#{tool.photo}", style: "object-fit:fill") %>
      <div class="card-trip-infos">
        <p><%= link_to "#{tool.name}", tool_path(tool), class: "no-decoration"%></p>
      </div>
    </div>
    <% end %>
  </div>
</div>
<div style="height:50px;"></div>
